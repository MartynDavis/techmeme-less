{
    "name":           "Techmeme Less",
    "version":        "1.0.2",
    "description":    "Allows 'More' and 'Tweets' information within Techmeme pages to be hidden and optionally viewed",
    "author":         "Martyn Davis (mad@madlid.com)",
    "permissions": [
        "http://www.techmeme.com/*",
        "https://www.techmeme.com/*",
        "http://techmeme.com/*",
        "https://techmeme.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://www.techmeme.com/*", 
                "https://www.techmeme.com/*",
                "http://techmeme.com/*",
                "https://techmeme.com/*"
            ],
            "css": ["css/techmeme-less.css"],
            "js":  ["scripts/techmeme-less.js"]
        }
    ],
    "icons": {
         "48": "images/techmeme-less.png",
        "128": "images/techmeme-less-128.png"
    },
    "web_accessible_resources": [
        "images/none.png",
        "images/summary.png",
        "images/verbose.png"
    ],
    "manifest_version": 2,
    "update_url": "https://clients2.google.com/service/update2/crx"
}
